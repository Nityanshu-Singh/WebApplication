@model List<Customer>

<!DOCTYPE html>
<html>
<head>
    <title>Customers Details by Order Date</title>
</head>
<body>
    <h1>Customers Details by Order Date</h1>

    @if (Model.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Customer Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CustomerId</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No customers found for the selected order date.</p>
    }
</body>
</html>